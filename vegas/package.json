{
  "name": "vegas",
  "displayName": "vegas",
  "description": "Language support for the vegas game synthesis language",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": ["Programming Languages"],
  "main": "./out/extension.js",

  "activationEvents": [
  ],

  "contributes": {
    "languages": [
      {
        "id": "vegas",
        "aliases": ["Vegas", "vegas"],
        "extensions": [".vg"],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "vegas.helloWorld",
        "title": "Hello World"
      }
    ]
  },

  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },

  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },

  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
